<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="101dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:src="@drawable/fruits_vegetables" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Broiler Murgi"
                android:textColor="@color/black" />

            <TextView
                android:paddingTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Premium Broiler chicken (Skinless)"
                android:textSize="12dp" />

            <LinearLayout
                android:paddingTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:backgroundTint="@color/main_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/taka_icona_20"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:gravity="center_vertical"
                        android:text="259"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <ImageView
                            android:visibility="visible"
                            android:id="@+id/reduceQuantity"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="#454040"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/circle_addto_beg_shape"
                            app:layout_constraintBottom_toBottomOf="@id/increaseQuantity"
                            app:layout_constraintEnd_toStartOf="@id/itemQuantity"
                            app:layout_constraintTop_toTopOf="@id/increaseQuantity"
                            app:srcCompat="@drawable/ic_remove_white_24dp" />

                        <TextView
                            android:visibility="visible"
                            android:id="@+id/itemQuantity"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="15sp" />



                        <ImageView
                            android:layout_marginTop="5dp"
                            android:id="@+id/increaseQuantity"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="#807878"
                            android:background="@drawable/circle_addto_beg_shape"
                            app:srcCompat="@drawable/ic_add_white_24dp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:tint="@color/main_color"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/cancel_con" />


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayColor" />


</LinearLayout>