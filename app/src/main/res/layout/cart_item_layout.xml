<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7">

        <ImageView
            android:id="@+id/productImageIV"
            android:layout_width="120dp"
            android:layout_height="match_parent"

            android:src="@drawable/boiler_murgi" />

        <LinearLayout
            android:layout_weight="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/productNameTV"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Broiler Murgi(Premium)Broiler Murgi(Premium)"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/productUnitTV"
                android:textColor="@color/gray_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.00Kg"
                />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#2547;"/>

                <TextView
                    android:id="@+id/productPriceTV"
                    android:textColor="@color/gray_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:text="518"
                    android:textStyle="bold" />

            </LinearLayout>



            <LinearLayout
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_marginLeft="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <ImageView
                        android:visibility="visible"
                        android:id="@+id/reduceQuantity"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:tint="#454040"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/circle_addto_beg_shape"
                        app:layout_constraintBottom_toBottomOf="@id/increaseQuantity"
                        app:layout_constraintEnd_toStartOf="@id/itemQuantity"
                        app:layout_constraintTop_toTopOf="@id/increaseQuantity"
                        app:srcCompat="@drawable/ic_remove_white_24dp" />

                    <TextView
                        android:textColor="@color/black"
                        android:visibility="visible"
                        android:id="@+id/itemQuantity"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="25sp" />



                    <ImageView
                        android:layout_marginTop="2dp"
                        android:id="@+id/increaseQuantity"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:tint="#807878"
                        android:background="@drawable/circle_addto_beg_shape"
                        app:srcCompat="@drawable/ic_add_white_24dp" />

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/deleteIV"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:tint="@color/main_color"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/cancel_con" />


        </LinearLayout>



    </LinearLayout>








</LinearLayout>